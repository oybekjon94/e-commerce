<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    app:startDestination="@id/onboardingFragment">


    <fragment
        android:id="@+id/signInFragment"
        android:name="com.oybekdev.e_commerce.presentation.sign_in.SignInFragment"
        android:label="SignInFragment"
        tools:layout="@layout/fragment_sign_in">

        <action
            android:id="@+id/to_signUpFragment"
            app:destination="@+id/signUpFragment"
            app:popUpTo="@id/signUpFragment"
            app:popUpToInclusive="true" />
    </fragment>


    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.oybekdev.e_commerce.presentation.onboarding.OnboardingFragment"
        android:label="fragment_onboarding"
        tools:layout="@layout/fragment_onboarding">


        <action
            android:id="@+id/to_signInFragment"
            app:destination="@id/signInFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.oybekdev.e_commerce.presentation.home.HomeFragment"
        android:label="homeFragment"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/to_categoriesFragment"
            app:destination="@id/categoriesFragment"/>

        <action
            android:id="@+id/to_productsFragment"
            app:destination="@+id/productsFragment"/>

        <action
            android:id="@+id/to_searchFragment"
            app:destination="@id/searchFragment"/>

        <action
            android:id="@+id/to_detailFragment"
            app:destination="@id/detailFragment"/>
    </fragment>

    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.oybekdev.e_commerce.presentation.categories.CategoriesFragment"
        android:label="CategoriesFragment"
        tools:layout="@layout/fragment_categories">

        <action
            android:id="@+id/to_productsFragment"
            app:destination="@+id/productsFragment"/>
        <action
            android:id="@+id/to_detailFragment"
            app:destination="@id/detailFragment"/>
    </fragment>

    <fragment
        android:id="@+id/productsFragment"
        android:name="com.oybekdev.e_commerce.presentation.products.ProductsFragment"
        android:label="ProductsFragment"
        tools:layout="@layout/fragment_products">

        <argument
            android:name="category"
            app:argType="com.oybekdev.e_commerce.data.api.product.dto.Category"/>

        <action
            android:id="@+id/to_searchFragment"
            app:destination="@id/searchFragment"/>
        <action
            android:id="@+id/to_detailFragment"
            app:destination="@id/detailFragment"/>
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.oybekdev.e_commerce.presentation.search.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search">

        <argument
            android:name="category"
            app:argType="com.oybekdev.e_commerce.data.api.product.dto.Category"
            app:nullable="true"
            android:defaultValue="@null"
            />
        <action
            android:id="@+id/to_filterFragment"
            app:destination="@id/filterFragment"/>
        <action
            android:id="@+id/to_detailFragment"
            app:destination="@id/detailFragment"/>
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.oybekdev.e_commerce.presentation.sign_up.SignUpFragment"
        android:label="SignUpFragment"
        tools:layout="@layout/fragment_sign_up">


        <action
            android:id="@id/signInFragment"
            app:destination="@id/signInFragment"
            app:popUpTo="@id/signInFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <action
        android:id="@+id/to_onboardingFragment"
        app:destination="@id/onboardingFragment"
        app:popUpTo="@id/main" />

    <action
        android:id="@+id/too_signInFragment"
        app:destination="@id/signInFragment"
        app:popUpTo="@id/main"/>

    <action
        android:id="@+id/to_homeFragment"
        app:destination="@id/homeFragment"
        app:popUpTo="@id/main"/>

    <fragment
        android:id="@+id/filterFragment"
        tools:layout="@layout/fragment_filter"
        android:name="com.oybekdev.e_commerce.presentation.filter.FilterFragment"
        android:label="FilterFragment">

        <argument
            android:name="filter"
            app:argType="com.oybekdev.e_commerce.domain.model.ProductQuery"/>
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        tools:layout="@layout/fragment_detail"
        android:name="com.oybekdev.e_commerce.presentation.detail.DetailFragment"
        android:label="DetailFragment">

        <deepLink
            android:autoVerify="true"
            app:uri="https://9d690745-ea7d-4b3d-a54d-a14e4a2c9ffb.mock.pstmn.io/products/{id}"/>


        <argument
            android:name="id"
            app:argType="string"/>

        <action
            android:id="@+id/to_detailFragment"
            app:destination="@id/detailFragment"/>
    </fragment>

</navigation>