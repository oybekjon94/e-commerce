<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    app:startDestination="@id/onboardingFragment">


    <fragment
        android:id="@+id/signInFragment"
        android:name="com.oybekdev.e_commerce.presentation.sign_in.SignInFragment"
        android:label="SignInFragment"
        tools:layout="@layout/fragment_sign_in">

        <action
            android:id="@+id/to_signUpFragment"
            app:destination="@+id/signUpFragment"
            app:popUpTo="@id/signUpFragment"
            app:popUpToInclusive="true" />
    </fragment>


    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.oybekdev.e_commerce.presentation.onboarding.OnboardingFragment"
        android:label="fragment_onboarding"
        tools:layout="@layout/fragment_onboarding">


        <action
            android:id="@+id/to_signInFragment"
            app:destination="@id/signInFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.oybekdev.e_commerce.presentation.home.HomeFragment"
        android:label="homeFragment"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/to_categoriesFragment"
            app:destination="@id/categoriesFragment"/>

        <action
            android:id="@+id/to_productsFragment"
            app:destination="@+id/productsFragment"/>
    </fragment>

    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.oybekdev.e_commerce.presentation.categories.CategoriesFragment"
        android:label="CategoriesFragment"
        tools:layout="@layout/fragment_categories">

        <action
            android:id="@+id/to_productsFragment"
            app:destination="@+id/productsFragment"/>
    </fragment>

    <fragment
        android:id="@+id/productsFragment"
        android:name="com.oybekdev.e_commerce.presentation.products.ProductsFragment"
        android:label="ProductsFragment"
        tools:layout="@layout/fragment_products">

        <argument
            android:name="category"
            app:argType="com.oybekdev.e_commerce.data.api.product.dto.Category"/>
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.oybekdev.e_commerce.presentation.sign_up.SignUpFragment"
        android:label="SignUpFragment"
        tools:layout="@layout/fragment_sign_up">


        <action
            android:id="@id/signInFragment"
            app:destination="@id/signInFragment"
            app:popUpTo="@id/signInFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <action
        android:id="@+id/to_onboardingFragment"
        app:destination="@id/onboardingFragment"
        app:popUpTo="@id/main" />

    <action
        android:id="@+id/too_signInFragment"
        app:destination="@id/signInFragment"
        app:popUpTo="@id/main"/>

    <action
        android:id="@+id/to_homeFragment"
        app:destination="@id/homeFragment"
        app:popUpTo="@id/main"/>


</navigation>